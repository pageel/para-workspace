{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://paraworkspace.dev/schemas/decision-plan.schema.json",
  "title": "PARA Decision Plan",
  "description": "Schema for decision records stored in Projects/<slug>/artifacts/para-decisions/",
  "type": "object",
  "required": ["id", "title", "status", "created_at", "context", "decision"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier â€” typically a Unix timestamp",
      "pattern": "^[0-9]+$"
    },
    "title": {
      "type": "string",
      "description": "Short, descriptive title of the decision",
      "minLength": 5,
      "maxLength": 200
    },
    "status": {
      "type": "string",
      "description": "Current status of the decision",
      "enum": ["proposed", "accepted", "rejected", "superseded", "deprecated"]
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of when the decision was created",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time"
    },
    "context": {
      "type": "string",
      "description": "Background and context that led to this decision",
      "minLength": 10
    },
    "decision": {
      "type": "string",
      "description": "The decision that was made",
      "minLength": 10
    },
    "options": {
      "type": "array",
      "description": "Options that were considered",
      "items": {
        "type": "object",
        "required": ["label", "description"],
        "properties": {
          "label": {
            "type": "string",
            "description": "Short label for the option"
          },
          "description": {
            "type": "string",
            "description": "Description of the option"
          },
          "pros": {
            "type": "array",
            "items": { "type": "string" }
          },
          "cons": {
            "type": "array",
            "items": { "type": "string" }
          },
          "chosen": {
            "type": "boolean",
            "description": "Whether this option was chosen"
          }
        }
      }
    },
    "consequences": {
      "type": "string",
      "description": "Expected consequences of the decision"
    },
    "superseded_by": {
      "type": "string",
      "description": "ID of the decision that supersedes this one (if applicable)"
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization",
      "items": { "type": "string" }
    },
    "project": {
      "type": "string",
      "description": "Project slug this decision belongs to"
    }
  },
  "additionalProperties": false
}
